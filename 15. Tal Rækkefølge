namespace Opgave15
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Please write in 3 numbers");
            double Tal1 = Convert.ToDouble(Console.ReadLine());
            double Tal2 = Convert.ToDouble(Console.ReadLine());
            double Tal3 = Convert.ToDouble(Console.ReadLine());

            double[] Numbers = { Tal1, Tal2, Tal3 };
            Array.Sort(Numbers);

            Console.WriteLine("The numbers in ascending order are {0} {1} {2}", Numbers[0], Numbers[1], Numbers[2]);
        }
    }
}
